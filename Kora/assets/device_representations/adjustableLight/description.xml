<?xml version="1.0" encoding="UTF-8"?>
<deviceRepresentation name="adjustableLight">
    <states>
        <state index="0" tag="Apagada"    icon="0.png"/>
        <state index="1" tag="Media-baja" icon="1.png"/>
        <state index="2" tag="Media"      icon="2.png"/>
        <state index="3" tag="Media-alta" icon="3.png"/>
        <state index="4" tag="Encendida"  icon="4.png"/>
    </states>
    
    <controls>
        <binaryControl name="switch" access="W"
                       minimumTag="Apagar" maximumTag="Encender"/>
        <scalarControl name="intensity" access="RW"
                       decreaseTag="Bajar intensidad" increaseTag="Subir intensidad"/>
    </controls>
</deviceRepresentation>
