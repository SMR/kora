<?xml version="1.0" encoding="UTF-8"?>
<deviceRepresentation name="adjustableLight">
    <icon class="default"/>
    <icon class="highContrast"/>
    <icon class="blackWhite"/>
    <icon class="photo"/>
    
    <control name="switch" type="binary">
        <state index="0" icon="0.png" name="Apagado"   absoluteAction="Apagar"/>
        <state index="1" icon="4.png" name="Encendido" absoluteAction="Encender"/>
    </control>
    
    <control name="intensity" type="scalar">
        <state index="0" icon="0.png" name="Apagado"/>
        <state index="1" icon="1.png"/>
        <state index="2" icon="2.png" name="En medio"/>
        <state index="3" icon="3.png"/>
        <state index="4" icon="4.png" name="Encendido"/>
    </control>
</deviceRepresentation>
