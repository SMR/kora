<?xml version="1.0" encoding="UTF-8"?>
<deviceRepresentation name="sunblind">
    <states>
        <state index="0" tag="Abajo"        icon="0.png"/>
        <state index="1" tag="Abajo-medio"  icon="1.png"/>
        <state index="2" tag="En medio"     icon="2.png"/>
        <state index="3" tag="Arriba-medio" icon="3.png"/>
        <state index="4" tag="Arriba"       icon="4.png"/>
    </states>
    
    <controls>
        <binaryControl name="switch" access="W"
                       minimumTag="Bajar" maximumTag="Subir"/>
        <scalarControl name="intensity" access="RW"
                       decreaseTag="Bajar" increaseTag="Subir"/>
    </controls>
</deviceRepresentation>
