<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gskbyte="http://schemas.android.com/apk/res/org.gskbyte.kora"
	android:id="@+id/selectionLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<org.gskbyte.kora.customViews.GridLayout 
	    android:id="@+id/navigationButtons"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dip"
        
		gskbyte:numRows="1"
		gskbyte:numColumns="2">
		
		<org.gskbyte.kora.customViews.KoraButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gskbyte:showText="true"
            gskbyte:text="@string/previous"
            gskbyte:icon="@drawable/action_previous"
            gskbyte:textSize="20"
            gskbyte:overrideCommonTextSize="true"
		    />
		
		<org.gskbyte.kora.customViews.KoraButton
            android:id="@+id/next"
            android:maxHeight="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gskbyte:showText="true"
            gskbyte:text="@string/next"
            gskbyte:icon="@drawable/action_next"
            gskbyte:textSize="20"
            gskbyte:overrideCommonTextSize="true"
            />
	</org.gskbyte.kora.customViews.GridLayout> 
</RelativeLayout>
