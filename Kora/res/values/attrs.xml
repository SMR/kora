<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GridLayout">
        <attr name="numColumns" format="integer" />
        <attr name="numRows" format="integer" />
        <attr name="innerMargin" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="KoraButton">
        <attr name="showText" format="boolean" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="float" />
        <attr name="overrideCommonTextSize" format="boolean" />
        <attr name="icon" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="DetailedSeekBar">
        <attr name="steps" format="integer" />
        <attr name="title" format="string" />
    </declare-styleable>
    <declare-styleable name="IntegerSeekBar">
        <attr name="minimum" format="integer" />
        <attr name="maximum" format="integer" />
    </declare-styleable>
    <declare-styleable name="FloatSeekBar">
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
    </declare-styleable>
    <declare-styleable name="KoraArraySeekBar">
        <attr name="array_id" format="integer"/>
    </declare-styleable>
    
    <integer-array name="defaultArray"> 
        <item>@string/lookAndFeel</item>
    </integer-array>
    
    <integer-array name="threeSizes"> 
	    <item>@string/textSmall</item> 
	    <item>@string/textMedium</item> 
        <item>@string/textLarge</item> 
	</integer-array>
</resources>
