<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
  	android:minWidth="250dip"
	android:orientation="horizontal">
	
	<Button android:id="@+id/photoButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="80dip"
		android:minHeight="90dip"
		
		android:text="foto"
		android:drawableTop="@drawable/icon_user"
	/>
	
	<EditText android:id="@+id/userNameEdit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/photoButton"
		
		android:hint="Nombre"
		android:singleLine="true"
	/>
	
	<EditText android:id="@+id/userSchoolEdit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/photoButton"
		android:layout_below="@id/userNameEdit"
		android:hint="Centro"
		android:singleLine="true"
	/>

	<Spinner android:id="@+id/useProfileSpinner"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@id/userSchoolEdit"
		android:minWidth="200dip"
		
		android:contentDescription="caca"
	/>
		
	<TextView android:id="@+id/useProfileText" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_below="@id/userSchoolEdit"
		android:layout_toLeftOf="@id/useProfileSpinner"
		android:layout_alignParentLeft="true"
		android:layout_alignBaseline="@id/useProfileSpinner"
		android:layout_marginLeft="10dip"
		
		android:text="Perfil de\nuso"
	/>
		
	<Spinner android:id="@+id/deviceProfileSpinner"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/useProfileSpinner"
		android:layout_alignLeft="@id/useProfileSpinner"
		android:layout_alignParentRight="true"/>
	
	<TextView android:id="@+id/deviceProfileText" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_below="@id/useProfileSpinner"
		android:layout_toLeftOf="@id/deviceProfileSpinner"
		android:layout_alignParentLeft="true"
		android:layout_alignBaseline="@id/deviceProfileSpinner"
		android:layout_marginLeft="10dip"
		
		android:text="Perfil de\ndispositivos" />
		
	<CheckBox android:id="@+id/autoStartCheckBox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/deviceProfileSpinner"
		
		android:text="Entrada\nautomÃ¡tica"
	/>
		
	<EditText android:id="@+id/autoStartEdit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/autoStartCheckBox"
		android:layout_below="@id/deviceProfileSpinner"
		android:hint="segundos"
		android:singleLine="true"
		android:numeric="integer"
	/>
		
</RelativeLayout>
</ScrollView>
