<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/navigationButtons"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		>
		
		<Button android:text="Back"
			android:id="@+id/backButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableLeft="@drawable/action_previous"
			/>
			
		<Button android:text="Next"
			android:id="@+id/nextButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableRight="@drawable/action_next"
			/>
	
	</LinearLayout>
	
	<org.gskbyte.kora.customViews.GridLayout
	    android:id="@+id/deviceGrid"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    
	    
	    android:layout_above="@id/navigationButtons"
	    />

</RelativeLayout>
